{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/output/build/${presetName}",
      "installDir": "${sourceDir}/output/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "17",
        "WARNINGS_AS_ERRORS": "OFF",
        "BUILD_SHARED_LIBS": "OFF",
        "BUILD_TESTING": "ON",
        "ENABLE_CLANG_TIDY": "OFF"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "ninja-base",
      "hidden": true,
      "inherits": "base",
      "generator": "Ninja"
    },
    {
      "name": "msvc-base",
      "hidden": true,
      "inherits": ["ninja-base", "windows-base"],
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_LINKER": "link"
      }
    },
    {
      "name": "msvc-clang-base",
      "hidden": true,
      "inherits": ["ninja-base", "windows-base"],
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl",
        "CMAKE_LINKER": "link"
      }
    },

    {
      "name": "ninja-debug",
      "inherits": ["ninja-base", "debug"]
    },
    {
      "name": "ninja-release",
      "inherits": ["ninja-base", "release"]
    },
    {
      "name": "msvc-debug",
      "inherits": ["msvc-base", "debug"]
    },
    {
      "name": "msvc-release",
      "inherits": ["msvc-base", "release"]
    },
    {
      "name": "msvc-clang-debug",
      "inherits": ["msvc-clang-base", "debug"]
    },
    {
      "name": "msvc-clang-release",
      "inherits": ["msvc-clang-base", "release"]
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-release"
    },
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "msvc-release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "msvc-clang-debug",
      "configurePreset": "msvc-clang-debug"
    },
    {
      "name": "msvc-clang-release",
      "configurePreset": "msvc-clang-release"
    }
  ],
  "testPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-release"
    },
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "msvc-release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "msvc-clang-debug",
      "configurePreset": "msvc-clang-debug"
    },
    {
      "name": "msvc-clang-release",
      "configurePreset": "msvc-clang-release"
    }
  ]
}
